<div class="container">
  <div class="row">
    <div class="col-md-9 offset-md-1 d-flex justify-content-between">
      <p><span class="bg-light font-weight-bold px-3">商品一覧</span></p>
      <%= button_to new_admin_item_path, method: :get, class: "btn-light bg-white rounded-circle shadow border-0 pull-right" do %>
        <i class="fas fa-plus"></i>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 offset-md-2">
      <table class="table table-borderless">
        <thead class="thead-light">
          <tr>
            <th scope="col">商品ID</th>
            <th scope="col">商品名</th>
            <th scope="col">税抜価格</th>
          </tr>
        </thead>
        <% @items.each do |item| %>
          <tbody>
            <tr>
              <th scope="row"><%= item.id %></th>
              <td>
                <%= link_to admin_item_path(item.id) do %>
                  <%= item.name %>
                <% end %>
              </td>
              <td><%= item.delimit %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>

  <div class="row justify-content-center mb-3">
    <%= paginate @items %>
  </div>
</div>