<div class="container">
  <div class="row">
    <div class="col-md-9 offset-md-1">
      <p><span class="bg-light font-weight-bold px-3">商品詳細</span></p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3 offset-md-1">
      <%= image_tag @item.get_image(230, 230) %>
    </div>
    <div class="col">
      <table>
        <tr>
          <td class="pt-3 pr-5">商品名</td>
          <td class="pt-3"><%= @item.name %></td>
        </tr>
        <tr>
          <td class="pt-3 pr-5">商品説明</td>
          <td class="pt-3"><%= @item.introduction %></td>
        </tr>
        <tr>
          <td class="pt-3 pr-5">税込価格<br>（税抜価格）</td>
          <td class="pt-3"><%= @item.add_tax_price.to_i.to_s(:delimited) %>
          （<%= @item.price.to_i.to_s(:delimited) %>）円</td>
        </tr>
      </table>
      <div class="col row justify-content-center">
        <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success my-3 px-5" %>
      </div>
    </div>
  </div>
</div>

