<div class="container">
  <div class="row">
    <div class="col-md-9 offset-md-1">
      <h5 class="my-4"><span class="bg-light font-weight-bold px-3">マイページ</span></h5>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 d-flex align-items-start">
      <h5 class="mb-3 mt-1 mr-4"><strong>登録情報</strong></h5>
      <%= link_to "編集する", edit_customer_path, class: "btn btn-success mb-3 px-4 py-1" %>
    </div>
    <div class="col-md-8">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th scope="row" class="table-active col-md-3 col-sm-4">氏名</th>
            <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
          </tr>
          <tr>
            <th class="table-active">カナ</th>
            <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <th class="table-active">郵便番号</th>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <th class="table-active">住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th class="table-active">電話番号</th>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <th class="table-active">メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
      <div class="col-md-8 d-flex align-items-start p-0">
        <h5 class="mb-3 mt-1 mr-4"><strong>注文履歴</strong></h5>
        <%= link_to "一覧を見る", orders_path, class: "btn btn-primary mb-3 px-4 py-1" %>
      </div>
    </div>
  </div>
</div>