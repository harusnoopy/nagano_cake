<div class="container">
  <div class="row offset-md-3">
      <p id="notice"><%= notice %></p>
  </div>
  <div class="row offset-md-1">
    <% if @customer.errors.any? %>
      <%= @customer.errors.count %>件のエラーが発生しました
      <ul>
        <% @customer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  
  <div class="row">
    <div class="col-md-9 offset-md-1">
      <p><span class="bg-light font-weight-bold px-3">新規会員登録</span></p>
    </div>
  </div>

  <div class="row">
    <%= form_with model: @customer, url: customer_registration_path do |f| %>
      <table>
        <div class="field">
          <tr>
            <td><%= f.label :name, "名前", class: "my-2" %></td>
            <td>(姓)</td>
            <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "令和" %></td>
            <td>　　(名)</td>
            <td><%= f.text_field :first_name, autocomplete: "first_name", placeholder: "道子" %></td>
          </tr>
        </div>

        <div class="field">
          <tr>
            <td><%= f.label :name_kana, "フリガナ", class: "my-2" %></td>
            <td>(セイ)</td>
            <td><%= f.text_field :last_name_kana, autocomplete: "last_name_kana", placeholder: "レイワ" %></td>
            <td>　　(メイ)</td>
            <td><%= f.text_field :first_name_kana, autocomplete: "first_name_kana", placeholder: "ミチコ" %></td>
          </tr>
        </div>

        <div class="field">
          <tr>
            <td><%= f.label :email, "メールアドレス", class: "my-2" %></td>
            <td></td><td><%= f.email_field :email, autocomplete: "email", placeholder: "sample@examle.com" %></td><td colspan="2"></td>
          </tr>
        </div>

        <div class="field">
          <tr>
            <td><%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "my-2" %></td>
            <td></td><td><%= f.text_field :postal_code, autocomplete: "postal_code", placeholder: "0000000" %></td><td colspan="2"></td>
          </tr>
        </div>

        <div class="field">
          <tr>
            <td><%= f.label :address, "住所", class: "my-2" %></td>
            <td></td><td colspan="3"><%= f.text_field :address, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0", size: "57" %></td>
          </tr>
        </div>

        <div class="field">
          <tr>
            <td><%= f.label :telephone_number, "電話番号", class: "my-2" %></td>
            <td></td><td><%= f.text_field :telephone_number, autocomplete: "telephone_number", placeholder: "00000000000" %></td><td colspan="2"></td>
          </tr>
        </div>

        <div class="field">
          <tr>
            <td><%= f.label :password, "パスワード(6文字以上)", class: "my-2" %></td>
            <% if @minimum_password_length %>
            <% end %>
            <td></td><td><%= f.password_field :password, autocomplete: "new-password" %></td><td colspan="2"></td>
          </tr>
        </div>

        <div class="field">
          <tr>
            <td><%= f.label :password_confirmation, "パスワード(確認用)", class: "my-2" %></td>
            <td></td><td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td><td colspan="2"></td>
          </tr>
        </div>

        <div class="actions">
          <tr>
            <td colspan="2"></td><td><%= f.submit "新規登録", class: "btn btn-success my-3 px-5" %></td><td colspan="2"></td>
          </tr>
        </div>
      </table>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-9 offset-md-1">
      <p class="mt-3"><span class="bg-light font-weight-bold">　既に登録済みの方　</span></p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-9 offset-md-1 mb-3">
    <%= link_to "こちら", new_customer_session_path, class: "mx-3" %>からログインしてください。
    </div>
  </div>
</div>