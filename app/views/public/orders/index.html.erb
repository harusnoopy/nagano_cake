<div class="container">
  <div class="row offset-1">
    <h5 class="mt-4"><span class="bg-light font-weight-bold px-3 mt-1">注文履歴一覧</span></h5>
  </div>

  <div class="row">
    <div class="col">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col" class="table-active">注文日</th>
            <th class="table-active">配送先</th>
            <th class="table-active">注文商品</th>
            <th class="table-active">支払金額</th>
            <th class="table-active">注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td class="align-middle"><%= order.created_at.strftime('%Y/%m/%d') %></td>
              <td class="align-middle">
                <%= order.postal_code %><br>
                <%= order.address %><br>
                <%= order.name %>
              </td>
              <td class="align-middle">
                <% order.order_details.each do |order_detail| %>
                  <%= order_detail.item.name %><br>
                <% end %>
              </td>
              <td class="align-middle"><%= order.total_payment.to_i.to_s(:delimited) %></td>
              <td class="align-middle"><%= link_to "表示する", order_path(order.id), class: "btn btn-primary px-2 py-1 d-flex justify-content-center" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>