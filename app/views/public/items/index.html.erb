<div class="container">
  <div class="row">
    <h4 class="font-weight-bold">商品一覧</h4>
    <p class="mt-1">(全<%= @items_all.count %>件)</p>
  </div>
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-3">
        <div class="card border-0 img-fluid">
          <%= link_to item_path(item.id) do %>
            <%= image_tag item.get_image(200,200) %>
          <% end %>
          <div class="card-body">
            <p class="card-text">
              <%= item.name %><br>
              ￥<%= item.price.to_i.to_s(:delimited) %><br>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row justify-content-center mb-3">
    <%= paginate @items %>
  </div>
</div>